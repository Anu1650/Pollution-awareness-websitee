<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Panel</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      background: linear-gradient(to right, #e3f2fd, #fce4ec);
      min-height: 100vh;
      color: #333;
    }
    h2 {
      color: #444;
      text-align: center;
      margin-bottom: 20px;
      animation: fadeIn 1s ease-in-out;
    }
    .container {
      max-width: 1100px;
      margin: 30px auto;
      padding: 20px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      animation: slideUp 0.6s ease-out;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }
    th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #4a90e2;
      color: white;
    }
    tr:hover {
      background-color: #f1faff;
      transition: background 0.3s ease;
    }
    .action-btn {
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      transition: transform 0.2s ease, background 0.3s ease;
    }
    .delete-btn {
      background-color: #e74c3c;
      color: white;
    }
    .delete-btn:hover {
      background-color: #c0392b;
      transform: scale(1.05);
    }
    .btn-group a, .btn-group button {
      display: inline-block;
      background: #4a90e2;
      color: white;
      padding: 10px 15px;
      margin: 5px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.3s ease, transform 0.2s ease;
    }
    .btn-group a:hover, .btn-group button:hover {
      background: #357ab7;
      transform: scale(1.05);
    }
    .search-bar input {
      padding: 10px;
      width: 100%;
      border-radius: 6px;
      border: 1px solid #ccc;
      margin-top: 15px;
    }
    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      animation: fadeIn 0.4s ease;
    }
    .modal-content {
      background-color: #fff;
      margin: 10% auto;
      padding: 20px;
      border-radius: 12px;
      width: 400px;
      animation: scaleUp 0.3s ease;
    }
    .modal-content h3 {
      margin-top: 0;
    }
    .modal-content input, .modal-content button {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .close {
      float: right;
      font-size: 20px;
      cursor: pointer;
      color: #aaa;
    }
    .close:hover {
      color: black;
    }
    .submit-btn {
      background-color: #4a90e2;
      color: white;
      border: none;
      font-weight: 500;
    }
    .submit-btn:hover {
      background-color: #357ab7;
    }
    /* Animations */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes slideUp {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    @keyframes scaleUp {
      from { transform: scale(0.8); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>üìä Admin Dashboard</h2>

    <div class="btn-group">
      <a href="/download-json">‚¨á Download Records</a>
      <a href="/logout">üö™ Logout</a>
      <a href="/">üè† Home Page</a>
      <button onclick="openModal()">‚ûï Add Record</button>
    </div>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="üîç Search by index, name, or email..." onkeyup="filterTable()" />
    </div>

    <table id="recordsTable">
      <thead>
        <tr>
          <th>Index</th>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Timestamp</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (contactData.length === 0) { %>
          <tr><td colspan="6">No records found.</td></tr>
        <% } else { %>
          <% contactData.forEach((record, index) => { %>
            <tr>
              <td><%= index %></td>
              <td><%= record.name %></td>
              <td><%= record.email %></td>
              <td><%= record.message %></td>
              <td><%= record.timestamp %></td>
              <td>
                <form action="/admin/delete/<%= index %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this record?')">
                  <button type="submit" class="action-btn delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Modal for Adding Record -->
  <div id="addModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h3>‚ûï Add New Record</h3>
      <form action="/admin/add" method="POST">
        <input type="text" name="name" placeholder="Name" required>
        <input type="email" name="email" placeholder="Email" required>
        <input type="text" name="message" placeholder="Message">
        <button type="submit" class="submit-btn">Add Record</button>
      </form>
    </div>
  </div>

  <script>
    function filterTable() {
      const filter = document.getElementById("searchInput").value.toLowerCase();
      const rows = document.querySelectorAll("#recordsTable tbody tr");
      rows.forEach(row => {
        const cells = row.querySelectorAll("td");
        let match = false;
        for (let i = 0; i < cells.length - 1; i++) {
          if (cells[i].innerText.toLowerCase().includes(filter)) {
            match = true;
            break;
          }
        }
        row.style.display = match ? "" : "none";
      });
    }
    function openModal() {
      document.getElementById("addModal").style.display = "block";
    }
    function closeModal() {
      document.getElementById("addModal").style.display = "none";
    }
    window.onclick = function(event) {
      if (event.target == document.getElementById("addModal")) {
        closeModal();
      }
    }
  </script>
</body>
</html>
